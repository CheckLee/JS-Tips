.reset
  margin: 0px
  padding: 0px
.slider
  width: 100%
  height: 400px
  overflow: hidden
  .slider__content
    list-style: none
    width: calc(3 * 100%)
    height: 100%
    display: flex
    .slider__item
      width: 100%
      height 100%
      float: left
      &:nth-child(1)
        background-color: red
      &:nth-child(2) 
        background-color: blue
      &:nth-child(3) 
        background-color: yellow  